{
  "dashboard": {
    "title": "Portal CECRE Monitoring",
    "uid": "portal-cecre",
    "tags": ["portal", "cecre", "external"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Portal Status",
        "type": "stat",
        "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "probe_success{instance=\"https://portal.cecre.net\"}",
            "legendFormat": "Status"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 1, "color": "green" }
              ]
            },
            "mappings": [
              { "type": "value", "value": "1", "text": "UP" },
              { "type": "value", "value": "0", "text": "DOWN" }
            ]
          }
        }
      },
      {
        "id": 2,
        "title": "Response Time",
        "type": "graph",
        "gridPos": { "x": 6, "y": 0, "w": 18, "h": 8 },
        "targets": [
          {
            "expr": "probe_duration_seconds{instance=\"https://portal.cecre.net\"}",
            "legendFormat": "Response Time"
          }
        ],
        "yaxes": [{ "format": "s", "min": 0 }, { "format": "short" }]
      },
      {
        "id": 3,
        "title": "SSL Certificate Expiry",
        "type": "stat",
        "gridPos": { "x": 0, "y": 4, "w": 12, "h": 4 },
        "targets": [
          {
            "expr": "(probe_ssl_earliest_cert_expiry{instance=\"https://portal.cecre.net\"} - time()) / 86400",
            "legendFormat": "Days Until Expiry"
          }
        ],
        "options": {
          "colorMode": "background",
          "unit": "days"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 7, "color": "orange" },
                { "value": 30, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "HTTP Status Codes",
        "type": "graph",
        "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "probe_http_status_code{instance=\"https://portal.cecre.net\"}",
            "legendFormat": "Status Code"
          }
        ]
      }
    ]
  }
}

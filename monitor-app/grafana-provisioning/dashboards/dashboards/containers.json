{
  "dashboard": {
    "title": "Container Monitoring",
    "uid": "container-monitoring",
    "tags": ["docker", "containers", "cadvisor"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Container CPU Usage",
        "type": "graph",
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{name!=\"\"}[5m]) * 100",
            "legendFormat": "{{name}}"
          }
        ],
        "yaxes": [{ "format": "percent", "min": 0 }, { "format": "short" }]
      },
      {
        "id": 2,
        "title": "Container Memory Usage",
        "type": "graph",
        "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "container_memory_usage_bytes{name!=\"\"}",
            "legendFormat": "{{name}}"
          }
        ],
        "yaxes": [{ "format": "bytes" }, { "format": "short" }]
      },
      {
        "id": 3,
        "title": "Container Network I/O",
        "type": "graph",
        "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(container_network_receive_bytes_total{name!=\"\"}[5m])",
            "legendFormat": "RX - {{name}}"
          },
          {
            "expr": "rate(container_network_transmit_bytes_total{name!=\"\"}[5m])",
            "legendFormat": "TX - {{name}}"
          }
        ],
        "yaxes": [{ "format": "Bps" }, { "format": "short" }]
      },
      {
        "id": 4,
        "title": "Container Disk I/O",
        "type": "graph",
        "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(container_fs_reads_bytes_total{name!=\"\"}[5m])",
            "legendFormat": "Read - {{name}}"
          },
          {
            "expr": "rate(container_fs_writes_bytes_total{name!=\"\"}[5m])",
            "legendFormat": "Write - {{name}}"
          }
        ],
        "yaxes": [{ "format": "Bps" }, { "format": "short" }]
      }
    ]
  }
}

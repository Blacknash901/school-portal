# Trust Policy for EKS Service Account
{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Principal": {
        "Federated": "arn:aws:iam::YOUR_ACCOUNT_ID:oidc-provider/oidc.eks.us-east-1.amazonaws.com/id/YOUR_EKS_CLUSTER_ID"
      },
      "Action": "sts:AssumeRoleWithWebIdentity",
      "Condition": {
        "StringEquals": {
          "oidc.eks.us-east-1.amazonaws.com/id/YOUR_EKS_CLUSTER_ID:sub": "system:serviceaccount:default:school-portal-sa",
          "oidc.eks.us-east-1.amazonaws.com/id/YOUR_EKS_CLUSTER_ID:aud": "sts.amazonaws.com"
        }
      }
    }
  ]
}
